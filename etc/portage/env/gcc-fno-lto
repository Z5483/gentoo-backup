CC="gcc"
CXX="g++"

COMMON_CFLAGS="-march=native -mtune=native -O2 -ffunction-sections -fdata-sections -pipe"
COMMON_LDFLAGS="-Wl,-O2 -Wl,--as-needed -Wl,--gc-sections"

CFLAGS="${COMMON_CFLAGS} -fno-lto"
CXXFLAGS="${CFLAGS}"
LDFLAGS="${COMMON_LDFLAGS} ${CFLAGS} -fuse-ld=bfd"

AR="gcc-ar"
NM="gcc-nm"
RANLIB="gcc-ranlib"
